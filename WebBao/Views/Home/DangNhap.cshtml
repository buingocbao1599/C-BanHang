
@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Layout/HomeLayout.cshtml";
}

<link href="~/Content/css1/style.css" rel="stylesheet" />
<div style="height: 500px">
    <br />
    <input type="button" value="Đăng Nhập Tại Đây" id="btnDangNhap" class="btn btn-primary" />
    <div id="popup_login">
        <div class="login-form" id="login-form">
            <div style="clear:both; text-align:right; margin-bottom:0;">
                <span id="close_form" class="btn btn-danger">X</span>
            </div>
            <h2>Đăng Nhập</h2>
            <div class="form-info">
                @using (Html.BeginForm("DangNhap", "Home"))
                            {
                    < input type = "text" class="email TaiKhoan" name="txtTenDangNhap" placeholder="Tài Khoản" required="" />
                    <input type="password" class="password MatKhau" name="txtMatKhau" placeholder="Mật Khẩu" required="" />
                    <p><a href="#">Quên Mật Khẩu?</a></p>
                    <h3 style="font-weight: bold; color:red; text-align: left" id="ThongBao"></h3>
                    <ul class="login-buttons">
                        <li><input type="submit" value="Đăng Nhập" id="btnDangNhap1" /></li>
                        <li><a href="#" class="hvr-sweep-to-left">Đăng Ký</a></li>
                        <div class="clear"> </div>
                    </ul>
                }
            </div>
        </div>
    </div>
</div>
<!--copyrights-->
<div class="copyrights">
    <p>Template by <a href="http://w3layouts.com">Nhà Tài Trợ</a></p>
</div>

<style>
    #btnDangNhap {
        float: left;
                }

#close_form {
            color: white;
    }

    #login-form {
        background: #3a3a46;
        cursor: pointer;
    }

    #popup_login {
        position: fixed; /*di chuyển toàn trang*/
                top: 0;
            left: 0;
            width: 100%;
            height: 100%;
                background-color: rgba(0,0,0,.5);
                z-index: 99;
            display: none;
    }
</style>

@* sử dụng Jqquery để hiển thi Form đăng nhập*@

<script type="text/javascript">

    $("#btnDangNhap").click(function () {
        $("#popup_login").css("display", "block");
    });

    //Ẩn đi login
    $("#close_form").click(AnForm);
    function AnForm() {
        $("#popup_login").hide();
    }

    // lấy giá trị từ textbox
    $("#btnDangNhap1").click(function () {
        var TaiKhoan = $(".TaiKhoan").val();
        var MatKhau = $(".MatKhau").val();

        // alert("Tài khoản: " + TaiKhoan + "\n Mật Khẩu: " + MatKhau);
        if (TaiKhoan == "") {
            alert("Lỗi");
            return;
        }
    });

</script>

