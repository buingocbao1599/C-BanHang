        <br />
    </div>
    -- Load Ajax theo cách 3 dùng Ajax Jquery

    <script>
        $("#button").click(function () {
            $('#divLoading').show();
            var thamso1 = $("#txt1").val();
            var thamso2 = $("#txt2").val();
            $.ajax({
                type: 'GET',
                data: {
                    a: thamso1,
                    b: thamso2
                },
                url: '@Url.Content("LoadAjaxJquery")',
                success: function (ketqua)
                {
                    $('#divLoading').hide();
                    $('#KetQua').html(ketqua);
                }
            })
        })
    </script>
